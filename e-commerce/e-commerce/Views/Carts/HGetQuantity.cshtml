@model e_commerce.ViewModel.HomeDecorViewModel
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "HGetQuantity";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}
<div class="container-fluid" style="background-color:lavender">
<div class="jumbotron" style="display:inline-block; align-content:center; margin:auto; margin-block-start:1%; margin-inline-start:1%">

    <h4>Home Decor</h4>
    <hr />
    <div class="row">
        <div class="col-sm-3">
            <img src="@Context.Session.GetString("HImageFile")" class="card-img-top overflow-auto" alt="..." />
        </div>
        <div class="col-sm-9">
            
                    <form asp-action="HGetQuantity">
                        <div class="form-group">
                            <label asp-for="HName" class="control-label"></label>
                            <input asp-for="HName" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("Hname")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="HType" class="control-label"></label>
                            <select asp-for="HType" asp-items="Html.GetEnumSelectList<HType>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("Htype")" disabled></select>

                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("HPrice")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" style="width:800px;" min="1" max="@Context.Session.GetString("HQuantity")" required />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("HRating")" disabled />

                        </div>


                        <div class="form-group">
                            <label asp-for="HBrand" class="control-label"></label>
                            <select asp-for="HBrand" asp-items="Html.GetEnumSelectList<HBrand>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("HBrand")" disabled></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("HDescription")" disabled />

                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="FreeDelivery" placeholder="@Context.Session.GetString("HFreeDelivery")" disabled /> @Html.DisplayNameFor(model => model.FreeDelivery)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Active" placeholder="@Context.Session.GetString("HActive")" disabled /> @Html.DisplayNameFor(model => model.Active)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-primary" />
                        </div>
                    </form>
               

        </div>
        
    </div>
    

    <div>
        <a class="btn btn-primary" asp-action="CustomerView" asp-controller="Login">Back to Home</a>
    </div>


</div>
</div>