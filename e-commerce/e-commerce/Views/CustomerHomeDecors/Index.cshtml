@model IEnumerable<e_commerce.Models.HomeDecor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Fashion</title>



    <!-- Bootstrap -->

    <link href="Bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href=https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src=https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js></script>

    <script src=https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">





    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>

      <script src=https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js></script>

      <script src=https://oss.maxcdn.com/respond/1.4.2/respond.min.js></script>

    <![endif]-->

    <style>

        .i-plain:hover {
            color: red
        }
    </style>

</head>

<body>



    <div class="container-fluid padding">

        <h2>Home Decor Products</h2>

        <br />

        <div class="row overflow-auto">
            @foreach (var item in Model)
            {

                <div class="col-md-3 overflow-auto">



                    <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4='); backdrop-filter: blur(50px); background-size:cover; background-repeat: no-repeat;">


                        <a asp-controller="CustomerHomeDEcors" asp-action="Details" asp-route-id="@item.HId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top overflow-auto" alt="..." /></a>

                        <div class="card-body">

                            <h5 class="card-title">

                                <b>@item.HName</b>

                                <span class="bg-success" style="color:white">

                                    @item.Rating

                                    <span class="glyphicon glyphicon-star"></span>

                                </span>

                            </h5>

                            <h5 class="card-title">Rs @item.Price <s>Rs. 250 </s> 20% <span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>

                            <br>

                            <p class="card-text">@item.Description</p>
                            <div class="view overlay">

                                <a asp-controller="Carts" asp-action="GetHomeDecor" asp-route-id="@item.HId" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Add to Cart</a>

                                <a href="#" style="text-align:right" class=""><span class="glyphicon glyphicon-heart-empty i-plain"></span></a>

                            </div>


                        </div>





                    </div>
                    <br />

                </div>

            }
        </div>

    </div>





    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->

    <script src=https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js></script>



    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script src="Bootstrap/js/bootstrap.min.js"></script>

</body>

</html>