@model e_commerce.ViewModel.OrderReviewViewModel
@{
    ViewData["Title"] = "Review";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}
<div class="container" style="background-color:lavender">
    <div class="jumbotron" style="display:inline-block; align-content:center; margin:auto; margin-block-start:1%; margin-inline-start:1%">
        <h2>Review</h2>
        <br />
        <a class="btn btn-primary" asp-action="Index" asp-controller="Orders">Back To Orders</a>
        <br />

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Review">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="O_Rating" class="control-label">Order Rating</label>
                        <input asp-for="O_Rating" class="form-control" min="1" max="10" style="width:800px" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<status>()" style="width:800px"></select>

                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" style="width:800px" />

                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add Review" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>