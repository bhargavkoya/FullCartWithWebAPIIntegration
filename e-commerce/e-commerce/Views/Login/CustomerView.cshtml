@model e_commerce.Context.ShoppingDbContext

@{
    ViewData["Title"] = "AdminView";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>FullCart: Shop Anything Here</title>
    <!-- Bootstrap -->
    <link href="Bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href=https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src=https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js></script>
    <script src=https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src=https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js></script>
      <script src=https://oss.maxcdn.com/respond/1.4.2/respond.min.js></script>
    <![endif]-->
    <style>
        .i-plain:hover {
            color: red
        }

        * {
            box-sizing: border-box
        }

        body {
            font-family: "Lato", sans-serif;
        }
        /* Style the tab */
        .tab {
            float: left;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            height: 1000px;
        }
            /* Style the buttons inside the tab */
            .tab button {
                display: block;
                background-color: inherit;
                color: black;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                font-size: 17px;
            }
                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }
                /* Create an active/current "tab button" class */
                .tab button.active {
                    background-color: #ccc;
                }
        /* Style the tab content */
        .tabcontent {
            float: left;
            padding: 0px 12px;
            width: 100%;
            height: 1000px;
            display: none;
        }
        /* Clear floats after the tab */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
 
    @if (TempData["CLogin"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["CLogin"]");
            };
    </script>
}
    
</head>

<body style="background-color:lavender">



    <div class="col-sm-2">
        <div class="tab" style="background-color: #2d2d30">
            <button class="tablinks text-white" onmouseover="openCity(event, 'London')">Electronics</button><br />
            <button class="tablinks text-white" onmouseover="openCity(event, 'Paris')">Home Decors</button><br />
            <button class="tablinks text-white" onmouseover="openCity(event, 'Tokyo')">Fashion</button><br />
        </div>
    </div>
    <div class="col-sm-10" style="background-color:lavender">
        <div class="container-fluid padding">
            <div id="London" class="tabcontent">
                <h2>Electronics Product </h2>
                <br />
               
                <div class="row overflow-auto">
                    @foreach (var item in ViewBag.EleList1)
                    {
                        @if (item.Active == true)
                        {
                            <div class="col-md-3 overflow-auto">
                                <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4='); backdrop-filter: blur(50px); background-size:cover; background-repeat: no-repeat;">

                                    <a asp-controller="CustomerElectronicDevices" asp-action="Details" asp-route-id="@item.EId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top img-fluid img-circle overflow-auto" alt="..." /></a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <b>@item.EName</b>
                                            <span class="bg-success" style="color:white">
                                                @item.Rating
                                                <span class="glyphicon glyphicon-star"></span>
                                            </span>
                                        </h5>
                                        <h5 class="card-title">Rs @item.Price <span> 20% </span><span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>
                                        <br>
                                        <p class="card-text">@item.Description</p>

                                        <div class="view overlay">

                                            <a asp-controller="Carts" asp-action="GetElectronic" asp-route-id="@item.EId" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Add to Cart</a>

                                            <a href="#" style="text-align:right" class=""><span class="glyphicon glyphicon-heart-empty i-plain"></span></a>

                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        }
                    }
                </div>
            </div>

            <div id="Paris" class="tabcontent">
                <h2>Home Decors Product </h2>

                <div class="row overflow-auto">
                    @foreach (var item in ViewBag.HomeList1)
                    {
                        @if (item.Active == true)
                        {
                            <div class="col-md-3 overflow-auto">
                                <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4=');  backdrop-filter: blur(50px); background-size: cover; background-repeat: no-repeat; " >
                                    <a asp-controller="CustomerHomeDecors" asp-action="Details" asp-route-id="@item.HId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top img-fluid img-circle overflow-auto" alt="..." loading="lazy" /></a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <b>@item.HName</b>
                                            <span class="bg-success" style="color:white">
                                                @item.Rating
                                                <span class="glyphicon glyphicon-star"></span>
                                            </span>
                                        </h5>
                                        <h5 class="card-title">Rs @item.Price<span> 20% </span><span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>
                                        <br>
                                        <p class="card-text">@item.Description</p>
                                        <div class="view overlay">

                                            <a asp-controller="Carts" asp-action="GetHomeDecor" asp-route-id="@item.HId" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Add to Cart</a>

                                            <a href="#" style="text-align:right" class=""><span class="glyphicon glyphicon-heart-empty i-plain"></span></a>

                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        }
                    }
                </div>
            </div>

            <div id="Tokyo" class="tabcontent">
                <h2>Fashion Product</h2>

                <div class="row overflow-auto">
                    @foreach (var item in ViewBag.FashionList1)
                    {
                        @if (item.Active == true)
                        {
                            <div class="col-md-3 overflow-auto">
                                <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4='); backdrop-filter: blur(50px); background-size: cover; background-repeat: no-repeat;">
                                    <a asp-controller="CustomerFashions" asp-action="Details" asp-route-id="@item.FId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top img-fluid img-circle overflow-auto" alt="..."  loading="lazy" /></a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <b>@item.FName</b>
                                            <span class="bg-success" style="color:white">
                                                @item.Rating
                                                <span class="glyphicon glyphicon-star"></span>
                                            </span>
                                        </h5>
                                        <h5 class="card-title">Rs @item.Price <span> 20% </span><span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>
                                        <br>
                                        <p class="card-text">@item.Description</p>
                                        <div class="view overlay">

                                            <a asp-controller="Carts" asp-action="GetFashion" asp-route-id="@item.FId" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Add to Cart</a>

                                            <a href="#" style="text-align:right" class=""><span class="glyphicon glyphicon-heart-empty i-plain"></span></a>

                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        }
                    }
                </div>
            </div>


            @*Best deals section *@
            <div id="BestDeals">
                <h2>Best Deals </h2>
                <br />
               
                <div class="row overflow-auto">
                    @foreach (var item in ViewBag.EleList1)
                    {
                        @if (item.Category == Category.Mobile || item.Category == Category.EarPhone)
                        {
                            <div class="col-md-3 overflow-auto">
                                <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4='); backdrop-filter: blur(50px); background-size:cover; background-repeat: no-repeat;">

                                    <a asp-controller="CustomerElectronicDevices" asp-action="Details" asp-route-id="@item.EId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top img-fluid img-circle overflow-auto" alt="..." loading="lazy"  /></a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <b>@item.EName</b>
                                            <span class="bg-success" style="color:white">
                                                @item.Rating
                                                <span class="glyphicon glyphicon-star"></span>
                                            </span>
                                        </h5>
                                        <h5 class="card-title">Rs @item.Price <span> 20% </span><span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>
                                        <br>
                                        <p class="card-text">@item.Description</p>

                                        <div class="view overlay">

                                            <a asp-controller="Carts" asp-action="GetElectronic" asp-route-id="@item.EId" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span>Add to Cart</a>

                                            <a href="#" style="text-align:right" class=""><span class="glyphicon glyphicon-heart-empty i-plain"></span></a>

                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        }
                    }
                </div>
            </div>


        </div>
    </div>








    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->

    <script src=https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js></script>



    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script src="Bootstrap/js/bootstrap.min.js"></script>
    <script>
        function openCity(evt, cityName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(cityName).style.display = "block";
            evt.currentTarget.className += " active";
        }
    </script>
    <script src="Bootstrap/js/bootstrap.min.js"></script>
    
</body>

</html>

