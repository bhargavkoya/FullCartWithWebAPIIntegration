<body style="background-color:lavender">


    <div class="col-sm-2">
        <div class="tab" style="background-color: #2d2d30">
            <button class="tablinks text-white" onmouseover="openCity(event, 'London')">Electronics</button><br />
            <button class="tablinks text-white" onmouseover="openCity(event, 'Paris')">Home Decors</button><br />
            <button class="tablinks text-white" onmouseover="openCity(event, 'Tokyo')">Fashion</button><br />
        </div>
    </div>
    
    <div class="col-sm-10">
        <div class="container-fluid padding">
            <div id="London" class="tabcontent">
                <h2>Electronics Product </h2>
                <br />
                <p>
                    <a class="btn btn-primary" role="button" asp-controller="ElectronicDevices" asp-action="Create">Create New Electronic</a>
                </p>
                <div class="row overflow-auto">
                    @foreach (var item in ViewBag.EleList)
                    {
                        <div class="col-md-3 overflow-auto">
                            <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4='); backdrop-filter: blur(50px); background-size:cover; background-repeat: no-repeat;">
                                <a asp-controller="ElectronicDevices" asp-action="Details" asp-route-id="@item.EId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top overflow-auto" alt="..." /></a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <b>@item.EName</b>
                                        <span class="bg-success" style="color:white">
                                            @item.Rating
                                            <span class="glyphicon glyphicon-star"></span>
                                        </span>
                                    </h5>
                                    <h5 class="card-title">Rs @item.Price <span> 20% </span><span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>
                                    <br>
                                    <p class="card-text">@item.Description</p>
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                </div>
            </div>

