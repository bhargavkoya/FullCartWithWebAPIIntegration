@model e_commerce.Models.ElectronicDevice

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminViewPartial.cshtml";

}
<div class="jumbotron" style="display:inline-block; align-content:center; margin:auto; margin-block-start:1%; margin-inline-start:1%">
    <h1>Edit</h1>

    <h4>ElectronicDevice</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EId" />
                <div class="form-group">
                    <label asp-for="EName" class="control-label"></label>
                    <input asp-for="EName" class="form-control"  style="width:800px;"/>
                    <span asp-validation-for="EName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control" style="width:800px;"></select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" style="width:800px;"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control"  style="width:800px;"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" style="width:800px;" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LaunchDate" class="control-label"></label>
                    <input asp-for="LaunchDate" class="form-control" style="width:800px;" />
                    <span asp-validation-for="LaunchDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" style="width:800px;" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EBrand" class="control-label"></label>
                    <select asp-for="EBrand" asp-items="Html.GetEnumSelectList<EBrand>()" class="form-control" style="width:800px;"></select>
                    <span asp-validation-for="EBrand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" style="width:800px;" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="FreeDelivery"  style="width:800px;"/> @Html.DisplayNameFor(model => model.FreeDelivery)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Active" style="width:800px;" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            @if (ViewBag.EEdit != null)
            {
                <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.EEdit");
                        };
                </script>
            }
        </div>
    </div>

    <div>
        <a class="btn btn-primary"  asp-action="AdminView" asp-controller="Login">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>