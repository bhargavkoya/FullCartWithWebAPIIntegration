@model IEnumerable<e_commerce.Models.ElectronicDevice>

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Third Handson</title>



    <!-- Bootstrap -->

    <link href="Bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href=https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src=https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js></script>

    <script src=https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">





    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>

      <script src=https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js></script>

      <script src=https://oss.maxcdn.com/respond/1.4.2/respond.min.js></script>

    <![endif]-->

    <style>

        .i-plain:hover {
            color: red
        }
    </style>
    

</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">

        <a class="navbar-brand navbar-left" href="#">hTrack</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#colNav">

            <span class="navbar-toggler-icon"></span>

        </button>

        <div class="collapse navbar-collapse justify-content-sm-end" id="colNav">

            <ul class="navbar-nav navbar-right">

                <li class="nav-item">

                    <a class="nav-link" href="#">Products</a>

                </li>

                <li class="nav-item">

                    <a class="nav-link" href="#">Goals</a>

                </li>

            </ul>

        </div>

    </nav>

    <br>



    <div class="container-fluid padding">

        <h2>Products</h2>

        <br />
        <p>
            <a asp-controller="ElectronicDevices" asp-action="Create">Create New</a>
        </p>
        <div class="row overflow-auto">
            @foreach (var item in Model)
            {

                <div class="col-md-3 overflow-auto">



                    <div class="card h-100" style="background-image: url('https://media.istockphoto.com/vectors/crepe-paper-textured-grunge-vector-tricolour-faded-background-with-vector-id1264073605?k=6&m=1264073605&s=612x612&w=0&h=P31yF3S7XWPIvIINd5uTfuwl1MUa0nqzTRRaG0mFay4='); backdrop-filter: blur(50px); background-size:cover; background-repeat: no-repeat;">


                        <a asp-controller="ElectronicDevices" asp-action="Details" asp-route-id="@item.EId"> <img src="@item.ImageFile" style="height:200px" class="card-img-top overflow-auto" alt="..." /></a>

                        <div class="card-body">

                            <h5 class="card-title">

                                <b>@item.EName</b>

                                <span class="bg-success" style="color:white">

                                    @item.Rating

                                    <span class="glyphicon glyphicon-star"></span>

                                </span>

                            </h5>

                            <h5 class="card-title">Rs @item.Price <s>Rs. 250 </s> 20% <span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span></h5>

                            <br>

                            <p class="card-text">@item.Description</p>

                            

                        </div>





                    </div>
                    <br />

                </div>

            }
        </div>

    </div>





    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->

    <script src=https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js></script>



    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script src="Bootstrap/js/bootstrap.min.js"></script>

</body>

</html>