@model e_commerce.Models.Address

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}
<div class="container" style="background-color:lavender">
    <div class="jumbotron" style="display:inline-block; align-content:center; margin:auto; margin-block-start:1%; margin-inline-start:1%">
        <h2>Edit</h2>

        <h4>Address</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AddressId" />
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" style="width:800px" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" style="width:800px" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" style="width:800px" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNo" class="control-label"></label>
                        <input asp-for="PhoneNo" class="form-control" style="width:800px" />
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddressLineone" class="control-label"></label>
                        <input asp-for="AddressLineone" class="form-control" style="width:800px" />
                        <span asp-validation-for="AddressLineone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddressLinetwo" class="control-label"></label>
                        <input asp-for="AddressLinetwo" class="form-control" style="width:800px" />
                        <span asp-validation-for="AddressLinetwo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Country" class="control-label"></label>
                        <input asp-for="Country" class="form-control" style="width:800px" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" style="width:800px" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label>
                        <input asp-for="State" class="form-control" style="width:800px" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PinCode" class="control-label"></label>
                        <input asp-for="PinCode" class="form-control" style="width:800px" />
                        <span asp-validation-for="PinCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustId" class="control-label"></label>
                        <select asp-for="CustId" class="form-control" asp-items="ViewBag.CustId" style="width:800px"></select>
                        <span asp-validation-for="CustId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-primary" asp-action="Index">Back to Address Information</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>