@model e_commerce.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddrId" class="control-label"></label>
                <select asp-for="AddrId" class="form-control" asp-items="ViewBag.AddrId"></select>
                <span asp-validation-for="AddrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfOrder" class="control-label"></label>
                <input asp-for="DateOfOrder" class="form-control" />
                <span asp-validation-for="DateOfOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMode" class="control-label"></label>
                <select asp-for="PaymentMode" asp-items="Html.GetEnumSelectList<paymentmode>()" class="form-control"></select>
                <span asp-validation-for="PaymentMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus" class="control-label"></label>
                <select asp-for="OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-control"></select>
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfDelivery" class="control-label"></label>
                <input asp-for="DateOfDelivery" class="form-control" />
                <span asp-validation-for="DateOfDelivery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
