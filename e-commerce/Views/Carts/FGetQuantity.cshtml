@model e_commerce.ViewModel.FashionViewModel
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "FGetQuantity";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";


}
<div class="container-fluid" style="background-color:lavender">
<div class="jumbotron" style="display:inline-block; align-content:center; margin:auto; margin-block-start:1%; margin-inline-start:1%">


    <h4>Fashion</h4>
    <hr />
    <div class="row">
        <div class="col-sm-3">
            <img src="@Context.Session.GetString("FImageFile")" class="card-img-top overflow-auto" alt="..." />
        </div>
        <div class="col-sm-9">
            

                    <form asp-action="FGetQuantity">
                        
                        <div class="form-group">
                            <label asp-for="FName" class="control-label"></label>
                            <input asp-for="FName" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("Fname")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="FType" class="control-label"></label>
                            <select asp-for="FType" asp-items="Html.GetEnumSelectList<FType>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("Ftype")" disabled></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="SubCategory" class="control-label"></label>
                            <select asp-for="SubCategory" asp-items="Html.GetEnumSelectList<Scategory>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("FSubCategory")" disabled></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("FPrice")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" style="width:800px;" min="1" max="@Context.Session.GetString("FQuantity")" required/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("FRating")" disabled />

                        </div>



                        <div class="form-group">
                            <label asp-for="FBrand" class="control-label"></label>
                            <select asp-for="FBrand" asp-items="Html.GetEnumSelectList<FBrand>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("FBrand")" disabled></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("FDescription")" disabled />

                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="FreeDelivery" placeholder="@Context.Session.GetString("FFreeDelivery")" disabled /> @Html.DisplayNameFor(model => model.FreeDelivery)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Active" placeholder="@Context.Session.GetString("FActive")" disabled /> @Html.DisplayNameFor(model => model.Active)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-primary" />
                        </div>
                    </form>
                
        </div>
       
    </div>
    

    <div>
        <a class="btn btn-primary" asp-action="CustomerView" asp-controller="Login">Back to Home</a>
    </div>


</div>
</div>