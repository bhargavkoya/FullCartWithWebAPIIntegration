@model e_commerce.ViewModel.ElectronicViewModel
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "EGetQuantity";
    Layout = "~/Views/Shared/CustomerViewPartial.cshtml";
}
<div class="container-fluid" style="background-color:lavender">
<div class="jumbotron" style="display:inline-block; align-content:center; margin:auto; margin-block-start:1%; margin-inline-start:1%">
    <h4>Electronic Device</h4>
    <hr />
    <div class="row">
        <div class="col-sm-3">
            <img src="@Context.Session.GetString("EImageFile")" class="card-img-top overflow-auto" alt="..." />
        </div>
        <div class="col-sm-9">
           

                    <form asp-action="EGetQuantity">


                        <div class="form-group">
                            <label asp-for="EName" class="control-label"></label>
                            <input asp-for="EName" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("Ename")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label"></label>
                            <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("ECategory")" disabled></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("EPrice")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" style="width:800px;" min="1" max="@Context.Session.GetString("EQuantity")" required/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("ERating")" disabled />

                        </div>


                        <div class="form-group">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input asp-for="ImageFile" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("EImageFile")" disabled />

                        </div>
                        <div class="form-group">
                            <label asp-for="EBrand" class="control-label"></label>
                            <select asp-for="EBrand" asp-items="Html.GetEnumSelectList<EBrand>()" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("EBrand")" disabled></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" style="width:800px;" placeholder="@Context.Session.GetString("EDescription")" disabled />

                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="FreeDelivery" placeholder="@Context.Session.GetString("EFreeDelivery")" disabled /> @Html.DisplayNameFor(model => model.FreeDelivery)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Active" placeholder="@Context.Session.GetString("EActive")" disabled /> @Html.DisplayNameFor(model => model.Active)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-primary" />
                        </div>
                    </form>
                
        </div>

    </div>


   

    <div>
        <a class="btn btn-primary" asp-action="CustomerView" asp-controller="Login">Back to Home</a>
    </div>


</div>
</div>